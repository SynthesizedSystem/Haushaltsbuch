<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Haushaltsbuch">

    <Style x:Key="BorderGroupStyle" TargetType="Border">
        <Setter Property="Height" Value="225"/>
        <Setter Property="Width" Value="450"/>
        <Setter Property="BorderBrush" Value="#e7e8eb"/>
        <Setter Property="CornerRadius" Value="0 0 5 5"/>
        <Setter Property="BorderThickness" Value="1 0 1 1"/>
        <Setter Property="Padding" Value="15 5 15 15"/>
    </Style>

    <Style x:Key="MonthResultBorderStyle" TargetType="Border">
        <Setter Property="Height" Value="75" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="Padding" Value="15 10" />
    </Style>

    <Style x:Key="LabelStyle" TargetType="TextBlock">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="#b6b1c2" />
    </Style>

    <Style x:Key="ButtonBaseStyle" TargetType="ButtonBase">
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Padding" Value="10" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="CornerRadius" Value="3" />
    </Style>

    <Style x:Key="ButtonStyle" TargetType="Button" BasedOn="{StaticResource ButtonBaseStyle}" />
    <Style x:Key="ToggleButtonStyle" TargetType="ToggleButton" BasedOn="{StaticResource ButtonBaseStyle}" />
    <Style x:Key="DropDownButtonStyle" TargetType="DropDownButton" BasedOn="{StaticResource ButtonBaseStyle}" />
    <Style x:Key="RadioButtonStyle" TargetType="RadioButton" BasedOn="{StaticResource ButtonBaseStyle}" />

</ResourceDictionary>
